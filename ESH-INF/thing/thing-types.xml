<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="oilfox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="oilfox">
		<label>OilFox</label>
		<description>OilFox connected through WLAN</description>

		<channels>
            <channel id="volume" typeId="volume" />
            <channel id="height" typeId="height" />
            <channel id="offset" typeId="height" />
            <channel id="metering" typeId="height" />
            <!-- TBD: how much height inside -->
            <!-- TBD: other properties -->
		</channels>

        <properties>
            <property name="vendor">OilFox</property>
            <property name="modelId">OilFox</property>
            <property name="version"></property>
            <property name="hardwareId"></property>
        </properties>

        <config-description>
            <parameter name="address" type="text">
                <label>Hostname</label>
                <description>OilFox Cloud server</description>
                <required>true</required>
                <default>api.oilfox.io</default>
            </parameter>

            <parameter name="email" type="text">
                <label>Email on OilFox Cloud</label>
                <description>Provide the Email registerd on the OilFox Cloud</description>
                <required>true</required>
            </parameter>

            <parameter name="password" type="text">
                <context>password</context>
                <label>Password on OilFox Cloud</label>
                <description>Provide the password registerd on the OilFox Cloud</description>
                <required>true</required>
            </parameter>
            
            <parameter name="refresh" type="integer" required="true" min="1" max="65335">
                <label>Refresh interval</label>
                <description>Specifies the refresh interval in hours.</description>
                <required>true</required>
                <default>6</default>
            </parameter>
        </config-description>
	</thing-type>

    <channel-type id="height">
        <item-type>Number</item-type>
        <label>Height [%d cm]</label>
        <description>Height in centimeters</description>
    </channel-type>

    <channel-type id="volume">
        <item-type>Number</item-type>
        <label>Height [%d l]</label>
        <description>Volume in liters</description>
    </channel-type>
</thing:thing-descriptions>
